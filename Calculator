import java.util.Scanner;

class Calculator {
    int add(int a, int b) {
        return a + b;
    }

    double add(double a, double b) {
        return a + b;
    }

    int add(int a, int b, int c) {
        return a + b + c;
    }
}

public class TestCalculator {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Calculator calc = new Calculator();

        System.out.print("Enter two integers: ");
        int x = sc.nextInt(), y = sc.nextInt();
        System.out.println("Sum of 2 int: " + calc.add(x, y));

        System.out.print("Enter two double values: ");
        double d1 = sc.nextDouble(), d2 = sc.nextDouble();
        System.out.println("Sum of 2 double: " + calc.add(d1, d2));

        System.out.print("Enter three integers: ");
        int a = sc.nextInt(), b = sc.nextInt(), c = sc.nextInt();
        System.out.println("Sum of 3 int: " + calc.add(a, b, c));

        sc.close();
    }
}
